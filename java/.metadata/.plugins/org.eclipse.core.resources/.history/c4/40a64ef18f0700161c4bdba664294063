package action;

import java.sql.SQLException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.concurrent.CountDownLatch;
import java.util.logging.SimpleFormatter;

import dao.CourseDao;
import model.Course;

public class CourseAction {
	public List<Course> get(Course cr) throws SQLException
	{		
		CourseDao hd = new CourseDao();	
		List<Map> wh = new ArrayList();
		//开始时间小于当前课程结束时间
		Map k = new HashMap();
		k.put("pre", "and");
		k.put("field", "startTime");
		k.put("relation", "<");
		k.put("value", "'"+cr.getEndTime()+"'");
		wh.add(k);
		//结束时间大于当前课程开始时间
		Map e = new HashMap();
		k.put("pre", "and");
		k.put("field", "endTime");
		k.put("relation", ">");
		k.put("value", "'"+cr.getStartTime()+"'");
		wh.add(e);
		//开课日期相等
		Map ed = new HashMap();
		k.put("pre", "and");
		k.put("field", "classDate");
		k.put("relation", "=");
		k.put("value", "'"+cr.getClassDate()+"'");
		wh.add(ed);
		
		return hd.get(wh);		
	}
	

}
