package action;

import java.sql.SQLException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import dao.CourseDao;
import model.Course;
import model.CourseSeries;
import model.CourseSeriesItem;

public class CourseAction {
	
	public boolean addNewCourse(Course cr) throws SQLException
	{
		//初始化action
		CourseSeriesAction csa = new CourseSeriesAction();
		CourseItemAction cia = new CourseItemAction();
		
		//读取冲突的课程
		List<Course> cs = this.get(cr);
		
		//插入课程数据
		int courseId = this.addCourse(cr);
		
		//读取附表可以组合的系列
		List<Integer> ni = new ArrayList();
		for(int i=0;i<cs.size();i++)
		{
			ni.add(cs.get(i).getId());
		}
		List<CourseSeriesItem> csiRes = cia.get(cr, ni);
		
		//添加单独的一个系列主表
		CourseSeries newCsa = new CourseSeries();
		newCsa.setClassDate(cr.getClassDate());
		int courseSeriesId = csa.addSeries(newCsa);
		
		//添加单独的一个系列附表
		CourseSeriesItem csi = new CourseSeriesItem();
		csi.setClassDate(cr.getClassDate());
		csi.setCourseId(cr.getId());
		csi.setSeriesId(courseSeriesId);
		csi.setSortCourse(0);
		cia.addItem(csi);
		
		//循环追加系列，因为是追加，所以不需要录入系列主表
		for(int j=0;j<csiRes.size();j++)
		{
			
		}
		
		return false;
	}
	
	
	
	
	
	//插入主表数据
	public int addCourse(Course cr) throws SQLException
	{
		CourseDao hd = new CourseDao();		
		return hd.add(cr);
	}	
	
	//查询冲突课程
	private List<Course> get(Course cr) throws SQLException
	{		
		CourseDao hd = new CourseDao();	
		List<Map> wh = new ArrayList();
		//开始时间小于当前课程结束时间
		Map k = new HashMap();
		k.put("pre", "and");
		k.put("field", "startTime");
		k.put("relation", "<");
		k.put("value", "'"+cr.getEndTime()+"'");
		wh.add(k);
		//结束时间大于当前课程开始时间
		Map e = new HashMap();
		e.put("pre", "and");
		e.put("field", "endTime");
		e.put("relation", ">");
		e.put("value", "'"+cr.getStartTime()+"'");
		wh.add(e);
		//开课日期相等
		Map ed = new HashMap();
		ed.put("pre", "and");
		ed.put("field", "classDate");
		ed.put("relation", "=");
		ed.put("value", "'"+cr.getClassDate()+"'");
		wh.add(ed);
		
		return hd.get(wh);		
	}
	

}
